<?xml version='1.0' encoding='utf-8'?>
<widget id="net.angularguy.tetris" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Tetris in AngularJS and Cordova by Roberto Hinojosa</name>
    <description>
        A Tetris game developed in AngularJS and Cordova.
    </description>
    <author email="rhinojosahdz@gmail.com" href="angularguy.net">
        Roberto Jaime Hinojosa Hernandez
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/icon.png" />
    <preference name="SplashScreenDelay" value="1"/><!-- disables splashscreen, value 0 doesn't seem to work -->
    <preference name="Orientation" value="portrait" /><!-- avoids screen rotation, locked to portrait -->
</widget>
